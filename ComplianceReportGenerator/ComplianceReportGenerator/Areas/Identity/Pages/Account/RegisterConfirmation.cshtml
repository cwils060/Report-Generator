@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}
<style>
    div {
        text-align: center;
    }

    .registration {
        background-color: #f8faf5;
        width: 100%;
        height: fit-content;
        padding: 20px;
        margin: auto;
    }
</style>

<h1>@ViewData["Title"]</h1><br />

<img src="https://clipart.world/wp-content/uploads/2021/06/Green-Check-Mark-clipart-png-images.png" height="200" width="200" />
<h3>Thank you for registering! Your account has been created.</h3>
<div class="registration">


    <p>Please check your email to verify your email address. Once you verify your account you will be able to login. Please check your spam folder.</p>
    <p>Alternatively, if you didn't receive an email - <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a> </p>

</div>





