@model ComplianceReportGenerator.Models.ClientFormViewModel

<!--round edges for boxes, buttons black with white text, everything separated, -->

<h1 style="text-align:center;">Just a little info before we get started here: </h1>

<form asp-controller="ClientForm" asp-action="CreateClientForm" method="post">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div>
                    <label style="padding-top:1rem; padding-bottom:.4rem; padding-left:2rem;"asp-for="Date">Date of Audit: </label>
                </div>
                <div>
                    <label style="padding-top: .4rem; padding-bottom: .4rem; padding-left: 2rem;" asp-for="ClientName">Client Name: </label>
                </div>
                <div>
                    <label style="padding-top: .4rem; padding-bottom: .4rem; padding-left: 2rem;" asp-for="ClientRep">Client Rep: </label>
                </div>
                <div>
                    <label style="padding-top: 1.65rem; padding-bottom: .4rem; padding-left: 2rem;" asp-for="FacilityType">Facility Type: </label>
                </div>
            </div>
            <div class="col-sm">
                <div style="padding-top: 1rem; padding-bottom:.4rem; padding-left:.4rem; padding-right:.4rem;">
                    <input style="border-width:.15rem; border-radius:.25rem; border-color:black;" asp-for="Date" required/>
                </div>
                <div style="padding:.4rem;">
                    <input style="border-width:.15rem; border-radius:.25rem; border-color:black;" asp-for="ClientName" required/>
                </div>
                <div style="padding:.4rem;">
                    <div>
                        <input style="border-width:.15rem; border-radius:.25rem; border-color:black;" asp-for="ClientRep" required/>
                    </div>
                    <!--the checkbox needs revisiting for styling. should have same styling as other boxes. check with nicole n group-->
                    <div>
                        <input style="border-width:1rem; border-radius:.1rem; border-color:black;" type="checkbox" asp-for="Staff" /> and staff
                    </div>
                </div>
                <div style ="padding:.4rem;" class="form-group">
                    <select style="border-width:.15rem; border-radius:.25rem; border-color:black;" name="FacilityType" id="FacilityType" required>
                        <option value=""></option>
                        <option value="Cultivation">Cultivation</option>
                        <option value="Production">Production</option>
                        <option value="Dispensary">Dispensary</option>
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <div>
                    <label style="padding-top:1rem; padding-bottom:.4rem; padding-left:3rem;" asp-for="Address">Address: </label>
                </div>
            </div>
            <div class="col-sm">
                <div style="padding-top: 1rem; padding-bottom:.4rem; padding-left:.4rem; padding-right:.4rem; ">
                    <input style="border-width:.15rem; border-radius:.25rem; border-color:black;" asp-for="Address" required/>
                </div>
                <!-- Need to check documentation and with group and Nicole for multiline inputs for address. looks much better. do we need it?
    <div style="padding:5px;">
        <input style="border-width:2px; border-radius:4px; border-color:black;" asp-for="Address" />
    </div>
        -->
            </div>
        </div>
    </div>
    <div style="text-align:center;">
        <input style="border-radius: .35rem; border-width: 0rem; background-color: black; color: white;" type="submit" value="Begin Citations Search" />
    </div>
</form>

